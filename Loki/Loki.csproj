<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.1</TargetFramework>
    <Version>1.2.0</Version>
    <IsPackable>true</IsPackable>
    <PackageId>LokiNet</PackageId>
    <Authors>Gökhan Gökalp</Authors>
    <Owners>Gökhan Gökalp</Owners>
    <PackageProjectUrl>https://github.com/GokGokalp/Loki</PackageProjectUrl>
    <Description>Loki provides an easy way to handle locking scenarios on distributed systems.</Description>
    <Copyright>Copyright 2019 Gökhan Gökalp</Copyright>
    <PackageTags>distributed-lock locking concurrency distributed lock</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Caching.StackExchangeRedis" Version="3.0.0" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="3.0.0" />
  </ItemGroup>
  
  <ItemGroup>
    <Folder Include="Redis\" />
  </ItemGroup>
</Project>